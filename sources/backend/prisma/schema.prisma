generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id             String          @id @default(uuid())
  name           String
  timeComplexity Int
  portions       Int
  ingredients    String[]
  steps          String[]
  description    String
  categoryId     String
  category       Category        @relation(fields: [categoryId], references: [id])
  Image          Image[]
  TagsOnRecipes  TagsOnRecipes[]
}

model Category {
  id     String   @id @default(uuid())
  name   String
  Recipe Recipe[]
}

model Image {
  id       String @id @default(uuid())
  base64   String
  recipeId String
  recipe   Recipe @relation(fields: [recipeId], references: [id])
}

model Tag {
  id            String          @id @default(uuid())
  name          String
  TagsOnRecipes TagsOnRecipes[]
}

model TagsOnRecipes {
  tagId    String
  recipeId String
  recipe   Recipe @relation(fields: [recipeId], references: [id])
  tag      Tag    @relation(fields: [tagId], references: [id])

  @@id([tagId, recipeId])
}
